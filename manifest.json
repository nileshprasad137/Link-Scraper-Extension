{
	"manifest_version": 2,

	"name": "Link Scraper",
	"description": "Scapes link from current tab",
	"version": "1.0",	

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {		
		"default_popup": "popup.html"
	}
}